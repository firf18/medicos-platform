{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017",
    "allowImportingTsExtensions": false,
    "types": ["node", "@types/react", "@types/react-dom"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.cy.ts",
    "**/*.e2e.ts",
    "**/cypress/**",
    "**/test/**",
    "**/tests/**",
    "**/__tests__/**",
    "vitest.config.ts",
    "src/features/auth/__tests__/**",
    "src/features/auth/**/__tests__/**",
    "src/hooks/useSearch.ts",
    "src/components/chat/**",
    "src/app/chat/**",
    "src/app/api/webhooks/**",
    "src/features/auth/hooks/use-realtime-subscription.ts",
    "src/app/clinic/management/**",
    "src/app/doctor/appointments/**",
    "src/app/doctor/records/**",
    "src/features/auth/components/**",
    "src/features/auth/hooks/**",
    "src/features/auth/contexts/**",
    "src/lib/didit-integration.ts",
    "src/app/chat.tsx",
    "src/app/chat/page.tsx",
    "backups/**"
  ]
}